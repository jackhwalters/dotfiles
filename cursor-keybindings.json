// Place your key bindings in this file to override the defaults

[
    // ============================================================================
    // SCM (Source Control) View
    // ============================================================================
    {
        "key": "shift+cmd+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "ctrl+shift+g",
        "command": "-workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "shift+cmd+c",
        "command": "-workbench.action.terminal.openNativeConsole",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditorInGroup"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditorInGroup"
    },
    {
        "key": "shift+cmd+c",
        "command": "git.checkoutDetached"
    }

    // ============================================================================
    // Suggestion Widget Navigation
    // ============================================================================
    {
        "key": "tab",
        "command": "-selectNextSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible"
    },
    {
        "key": "shift+tab",
        "command": "selectPrevSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible"
    },

    // ============================================================================
    // Quick Open Navigation
    // ============================================================================
    {
        "key": "tab",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "shift+tab",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },

    // ============================================================================
    // Symbol Navigation (Go to Symbol)
    // ============================================================================
    {
        "key": "shift+cmd+s",
        "command": "-workbench.action.files.saveAs"
    },
    {
        "key": "shift+cmd+s",
        "command": "-workbench.action.files.saveLocalFile",
        "when": "remoteFileDialogVisible"
    },
    {
        "key": "shift+cmd+s",
        "command": "-workbench.action.toggleUnifiedSidebar",
        "when": "cursor.agentIdeUnification.enabled"
    },
    {
        "key": "shift+cmd+s",
        "command": "workbench.action.gotoSymbol",
        "when": "!accessibilityHelpIsShown && !accessibleViewIsShown"
    },
    {
        "key": "shift+cmd+o",
        "command": "-workbench.action.gotoSymbol",
        "when": "!accessibilityHelpIsShown && !accessibleViewIsShown"
    },
    {
        "key": "shift+cmd+s",
        "command": "editor.action.accessibleViewGoToSymbol",
        "when": "accessibilityHelpIsShown && accessibleViewGoToSymbolSupported || accessibleViewGoToSymbolSupported && accessibleViewIsShown"
    },
    {
        "key": "shift+cmd+o",
        "command": "-editor.action.accessibleViewGoToSymbol",
        "when": "accessibilityHelpIsShown && accessibleViewGoToSymbolSupported || accessibleViewGoToSymbolSupported && accessibleViewIsShown"
    },

    // ============================================================================
    // Editor Group Navigation (Window Panes)
    // ============================================================================
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusLeftGroup"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusBelowGroup"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusAboveGroup"
    },
    {
        "key": "ctrl+;",
        "command": "workbench.action.focusRightGroup"
    },

    // ============================================================================
    // Vim Toggle
    // ============================================================================
    {
        "key": "shift+cmd+v",
        "command": "toggleVim"
    },

    // ============================================================================
    // Universal Return to Editor
    // ============================================================================
    {
        "key": "ctrl+e",
        "command": "workbench.action.focusActiveEditorGroup"
    },

    // ============================================================================
    // File Tree Navigation (jkl; remapped from hjkl)
    // ============================================================================
    {
        "key": "h",
        "command": "-list.collapse",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "j",
        "command": "-list.focusDown",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "k",
        "command": "-list.focusUp",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "l",
        "command": "-list.expand",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "j",
        "command": "list.focusDown",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "k",
        "command": "list.focusDown",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "l",
        "command": "list.focusUp",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": ";",
        "command": "list.select",
        "when": "listFocus && !inputFocus"
    },

    // ============================================================================
    // Global Search Navigation
    // ============================================================================
    {
        "key": "enter",
        "command": "search.action.focusSearchList",
        "when": "searchViewletFocus && searchInputBoxFocus"
    },
    {
        "key": "j",
        "command": "list.focusDown",
        "when": "searchViewletFocus && listFocus && !inputFocus"
    },
    {
        "key": "k",
        "command": "list.focusDown",
        "when": "searchViewletFocus && listFocus && !inputFocus"
    },
    {
        "key": "l",
        "command": "list.focusUp",
        "when": "searchViewletFocus && listFocus && !inputFocus"
    },
    {
        "key": ";",
        "command": "list.select",
        "when": "searchViewletFocus && listFocus && !inputFocus"
    },

    // ============================================================================
    // Inline Suggestions
    // ============================================================================
    {
        "key": "tab",
        "command": "-editor.action.acceptSelectedSuggestion",
        "when": "suggestWidgetVisible && !inlineSuggestionVisible"
    },
    {
        "key": "tab",
        "command": "-selectNextSuggestion",
        "when": "suggestWidgetVisible && !inlineSuggestionVisible"
    },
    {
        "key": "tab",
        "command": "editor.action.inlineSuggest.commit",
        "when": "inlineSuggestionVisible && textInputFocus && !inQuickOpen"
    },
]
